{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["deployment\\.yaml$"]
  },
  "packageRules": [
    {
      "matchSourceUrls": ["https://github.com/rook/rook"],
      "groupName": "rook-ceph"
    },
    {
      "matchSourceUrls": ["https://github.com/intel/helm-charts"],
      "groupName": "intel"
    }
  ]
}
